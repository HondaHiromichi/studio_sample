<%= search_form_for(@q, url:search_path) do |f| %>

<body>
    
    <div class="container">
    <div class="table-responsive">
      
      
      
  <table class="table">
    <form>
    <tbody>

    <tr>
      <th scope="row">
      <%= f.label :area, '地域' %>
      </th>
      <td>
      <%= f.radio_button :area_eq, '', {:checked => true} %>
      <%= f.label :area_eq, '指定なし' %>
      <%= f.radio_button :area_eq, '北海道' %>
      <%= f.label :area_eq, '北海道' %>
      <%= f.radio_button :area_eq, '北陸、甲信越' %>
      <%= f.label :area_eq, '北陸、甲信越' %>
      <%= f.radio_button :area_eq, '北関東' %>
      <%= f.label :area_eq, '北関東' %><br/>
      <%= f.radio_button :area_eq, '首都圏' %>
      <%= f.label :area_eq, '首都圏' %>
      <%= f.radio_button :area_eq, '東海' %>
      <%= f.label :area_eq, '東海' %>
      <%= f.radio_button :area_eq, '関西' %>
      <%= f.label :area_eq, '関西' %>
      <%= f.radio_button :area_eq, '中国' %>
      <%= f.label :area_eq, '中国' %>
      <%= f.radio_button :area_eq, '四国' %>
      <%= f.label :area_eq, '四国' %>
      <%= f.radio_button :area_eq, '沖縄' %>
      <%= f.label :area_eq, '沖縄' %>
      </td>
    </tr>

    <tr>
      <th scope="row">
      <%= f.label :station, '最寄駅' %>
      </th>
      <td>
      <%= f.search_field :station_cont, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <th scope="row">
      <%= f.label :feature, '条件' %>
      </th>
      <td>
      <input value="0" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in">
      <label for="q_features_feature_in">レコーディング可</label>
      <input value="1" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_1">
      <label for="q_features_feature_in_1">徒歩5分以内</label>
      <input value="2" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_2">
      <label for="q_features_feature_in_2">駐車場あり</label><br/>
      <input value="3" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_3">
      <label for="q_features_feature_in_3">レンタルあり</label>
      <input value="4" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_4">
      <label for="q_features_feature_in_4">パック料金あり</label>
      <input value="5" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_5">
      <label for="q_features_feature_in_5">Web予約可</label><br/>
      <input value="6" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_6">
      <label for="q_features_feature_in_6">コンビニあり</label>
      <input value="7" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_7">
      <label for="q_features_feature_in_7">飲食店あり</label>
      <input value="8" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_8">
      <label for="q_features_feature_in_8">休憩スペースあり</label><br/>
      <input value="9" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_9">
      <label for="q_features_feature_in_9">スタジオ内喫煙可</label>
      <input value="10" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_10">
      <label for="q_features_feature_in_10">スタジオ内飲食可</label>
      <input value="11" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_11">
      <label for="q_features_feature_in_11">生ピアノあり</label><br/>
      <input value="12" type="checkbox" name="q[features_feature_in][]" id="q_features_feature_in_12">
      <label for="q_features_feature_in_12">スタジオライブ可</label>
      </td>
    </tr>

    <tr>
      <th scope="row">
      <%= f.label :name_cont, 'スタジオ名' %>
      </th>
      <td>
      <%= f.search_field :name_cont, class: "form-control" %>
      </td>
    </tr>

    <tr>
      <td colspan="2" class="text-center submit">
      <input type="submit" name="commit" value="検索" data-disable-with="検索">
      </td>
    </tr>

    </tbody>
  </form>
  </table>
</div>
    </div>
    
  </body>

<% end %>
