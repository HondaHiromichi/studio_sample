<h1>トップページ</h1>
  <%= form_tag(root_path,:method => 'get') do %>
  <%= text_field_tag :search, params[:search] %>
  <%= text_field_tag :search1, params[:search1] %>
  <%= text_field_tag :search2, params[:search2] %>
  <%= submit_tag '検索', :name => nil %>
<% end %>

<table>
    <tr>
      <th>スタジオID</th>
      <th>スタジオ名</th>
    </tr>
  </thead>
    <% @studios.each do |studio| %>
      <tr>
        <td><%= studio.id %></td>
        <td><%= studio.name %></td>
      </tr>
    <% end %>
</table>
