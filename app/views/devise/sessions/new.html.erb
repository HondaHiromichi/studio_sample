<div class="container">
  <div class="mt-5"></div>
    <div class="row">
      <div class="col-xs-12 col-lg-12">
        <div class="mx-auto" style="width: 600px;">
          <div class="card">
            <div class="card-header" >
              <h2>ログイン</h2>
            </div>
              <div class="mx-auto" style="width: 500px;">
                <div class="mt-3"></div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.label :login %><br />
                      <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Eメールもしくはアカウント名" %>
                    </div>

                    <div class="from-group">
                      <%= f.label :password %><br />
                      <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "パスワード" %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="from-group">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, "ログイン状態を保持" %>
                      </div>
                    <% end -%>

                    <div class="actions pb-5">
                      <%= f.submit "ログイン", class: "btn btn-primary" %>
                    </div>
                  <% end %>

                  <%= render "devise/shared/links" %>
                <div class="mt-5"></div>
              </div> 
          </div>  
        </div>
      </div>
    </div>
</div>