<h2>ログイン画面</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "Eメールもしくはアカウント名" %>
  </div>

  <div class="from-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "パスワード" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="from-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログイン状態を保持" %>
    </div>
  <% end -%>

  <div class="actions pb-5">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
