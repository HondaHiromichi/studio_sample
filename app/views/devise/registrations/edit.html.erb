
<% if current_user.try(:manager?) %>


  <h2>プロフィール編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :account_name %><br />
      <%= f.text_field :account_name, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "アカウント名" %>
    </div>

    <div class="from-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "Eメール" %>
    </div>

    <div class="from-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "ファーストネーム" %>
    </div>

    <div class="from-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "ラストネーム" %>
    </div>

    <div class="from-group">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "電話番号" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="from-group">
      <%= f.label :password %> <i>(変更したくない場合は変更したくない場合は空白のままにしてください)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "パスワード" %>
      
    </div>

    <div class="from-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control col-md-5 col-sm", placeholder: "パスワード再確認" %>
    </div>

    <% if false %>
      <div class="from-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "現在のパスワード" %>
      </div>
    <% end %>

    <div class="actions pb-5">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h3>アカウント削除</h3>

  <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mb-5" %></p>

  <%= link_to "戻る", :back, class: "text-secondary" %>

<% else %>

  <h2>プロフィール編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :account_name %><br />
      <%= f.text_field :account_name, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "アカウント名" %>
    </div>

    <div class="from-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "Eメール" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="from-group">
      <%= f.label :password %> <i>(変更したくない場合は変更したくない場合は空白のままにしてください)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "パスワード" %>
    </div>

    <div class="from-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "パスワード再確認" %>
    </div>

    <% if false %>
      <div class="from-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>
    <% end %>

    <div class="actions pb-5">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h3>アカウント削除</h3>

  <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mb-5" %></p>

  <%= link_to "戻る", :back, class: "text-secondary"%>

<% end %>
